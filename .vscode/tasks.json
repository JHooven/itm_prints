{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and generate .bin",
			"type": "shell",
			"command": "cargo build --target thumbv7em-none-eabihf && arm-none-eabi-objcopy -O binary target/thumbv7em-none-eabihf/debug/led_button_interrupt target/thumbv7em-none-eabihf/debug/led_button_interrupt.bin",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run ITM Parser",
			"type": "shell",
			"command": "itm-parser --probe 0483:374b --connect-under-reset --chip STM32F429ZI 10000 8000000 1000000",
			"isBackground": true,
			"problemMatcher": [],
			"group": "test"
		}
	]
}